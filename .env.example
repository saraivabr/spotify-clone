# ==========================================
# SPOTIFY CLONE - Variáveis de Ambiente
# ==========================================
# Copie este arquivo para .env e configure suas credenciais

# ==========================================
# BANCO DE DADOS - Desenvolvimento Local
# ==========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=spotify
DB_USER=root
DB_PASS=

# ==========================================
# BANCO DE DADOS - Produção (Scalingo/Heroku)
# ==========================================
# A aplicação detecta automaticamente estas variáveis:
# SCALINGO_MYSQL_URL=mysql://user:pass@host:port/database
# DATABASE_URL=mysql://user:pass@host:port/database

# ==========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ==========================================
APP_NAME="Spotify Clone"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Timezone
APP_TIMEZONE=America/Toronto

# ==========================================
# SESSÃO
# ==========================================
SESSION_LIFETIME=120
SESSION_SECURE=false
SESSION_HTTPONLY=true

# ==========================================
# UPLOADS
# ==========================================
MAX_UPLOAD_SIZE=10M
ALLOWED_AUDIO_FORMATS=mp3,mpeg
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp

# ==========================================
# CLOUDFLARE (Opcional)
# ==========================================
# CLOUDFLARE_EMAIL=seu-email@exemplo.com
# CLOUDFLARE_API_KEY=sua-api-key

# ==========================================
# SMTP - Email (Opcional)
# ==========================================
# MAIL_DRIVER=smtp
# MAIL_HOST=smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USERNAME=null
# MAIL_PASSWORD=null
# MAIL_ENCRYPTION=null
# MAIL_FROM_ADDRESS=noreply@spotify-clone.com
# MAIL_FROM_NAME="Spotify Clone"

# ==========================================
# CACHE (Opcional)
# ==========================================
# CACHE_DRIVER=file
# CACHE_PREFIX=spotify_

# ==========================================
# SEGURANÇA
# ==========================================
# Chave secreta para encriptação (gere uma aleatória)
# APP_KEY=base64:gerarUmaChaveAleatoria256Bits

# ==========================================
# APIS EXTERNAS (Opcional)
# ==========================================
# SPOTIFY_CLIENT_ID=
# SPOTIFY_CLIENT_SECRET=
# LASTFM_API_KEY=
# MUSIXMATCH_API_KEY=

# ==========================================
# LOGS E MONITORAMENTO
# ==========================================
LOG_CHANNEL=file
LOG_LEVEL=debug
